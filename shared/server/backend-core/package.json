{
  "name": "backend-core",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --minify && pnpm copyapi",
    "build:dev": "pnpm lint && pnpm clean && tsup src/index.ts --dts --format esm && pnpm copyapi",
    "clean": "rm -rf dist",
    "lint": "xo --fix",
    "copyapi": "cp ../../api/spec/api.yaml ./dist/ && cp -r ../../api/docs ./dist/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/drizzle/migrate.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "express": "^4.19.2",
    "express-openapi-validator": "^5.1.6",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "postgres": "^3.4.4",
    "ulidx": "^2.3.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "drizzle-kit": "^0.22.7",
    "tsx": "^4.15.7"
  }
}
